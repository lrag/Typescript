<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">    
    <title>Document</title>
    
    <script src="/jquery.js" type="application/javascript"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<script type="application/javascript">

function avisoSesion(){
    alert("Su sesión va a caducar")
    location.reload()
}
setTimeout(avisoSesion, <%=expiracionSesion%>-20000)

function verFormulario(){
    window.location = './formularioProductos'
}

function refrescar(){
    //window.location = '/listadoProductos'
    window.location.reload()
}

$(function(){
    $("#btnNuevo").on('click',verFormulario)
    $("#btnRefrescar").on('click',refrescar)
})

</script>

<body>

    <div class="text-center page-header">
        <h2 class="mt-4 mb-4">Aplicación de gestion de la Tienda3000</h2>
    </div>   

    <%- include("../includes/menu") %>

    <h3 class="text-center mt-3 mb-3">
        Listado de productos (<span id="tiempo">60</span>)
    </h3>

    <div class="row">
        
        <div class="col-md-8 offset-md-2">

            <div class="text-center">
                <input type="button" id="btnNuevo"     class="btn btn-primary" value="Nuevo"/>
                <input type="button" id="btnRefrescar" class="btn btn-primary" value="Actualizar"/>
            </div>

            <br/>

            <table class="table table-hover table-striped">    
                <thead>
                    <tr>
                        <th>Codigo</th>
                        <th>Nombre</th>
                        <th>Fabricante</th>
                        <th>Categoría</th>
                    </tr>
                </thead>
                <tbody>
                    <%for(let producto of listadoProductos){%>
                        <tr>
                            <td>
                                <!-- Esta opción tambien nos sirve:
                                <a href="formularioProductos/<%=producto._id%>">
                                -->
                                <a href="./formularioProductos?idProducto=<%=producto._id%>">
                                    <%=producto.codigo%>
                                </a>
                            </td>
                            <td><%=producto.nombre%></td>
                            <td><%=producto.fabricante%></td>
                            <td><%=producto.categoria%></td>
                        </tr>
                    <%} 
                    if(listadoProductos.length == 0){%>
                        <tr>
                            <td colspan="4">No hay productos en la tabla</td>
                        </tr>
                    <%}%>                
                </tbody>
            </table>            

        </div>

    </div>
        
</body>
</html>